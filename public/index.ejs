    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular-route.js"></script>
    <script src="https://anglibs.github.io/angular-location-update/angular-location-update.js"></script>
    <script src="/static/js/angular/index.js"></script>
    <script src="/static/js/angular/router.js"></script>
    <script src="/static/js/angular/editTrack.js"></script>
    <script src="/static/js/angular/homeTrackLink.js"></script>
    <script src="/static/js/angular/toEditTrack.js"></script>
    <script src="/static/js/angular/masterPlayerTitle.js"></script>
    <script src="/static/js/angular/getMoreContent.js"></script>
    <script src="/static/js/angular/upload.js"></script>
    <%- include('includes/adsense')%>
</head>
<body>
<div id="app" ng-app="hs">
    <%- include('includes/nav') %>
    <div id="view" ng-view></div>
    <% if(loginUser.lastPlay.isPlaying){ %>
    <div class="masterPlayer remotePlay">
        <% }else{ %>
        <div class="masterPlayer">
            <% } %>
            <input type="range" class="timeStamp" value="0" max="100">
            <div class="playPuaseButton material-icons" fullname="<%= track.author.fullName %>"
                 username="<%= track.author.username %>" title="<%= track.title %>" trackid="<%= track._id %>">
                <% if(loginUser.lastPlay.isPlaying){ %>
                pause
                <% }else{ %>
                play_arrow
                <% } %>
            </div>
            <a username="<%= track.author.username %>" title="<%= track.title %>" ng-click="masterPlayerTitle($event)"
               ng-controller="masterPlayerTitle" class="title"
               href="/track/<%= track.author.username %>/<%= track.title %>"><%= track.author.fullName %>
                - <%= track.title %>
            </a>

            <div class="volume">
                <i class="material-icons">volume_up</i>
                <input type="range" value="100" max="100" id="volumeBar">
                <% if(volume){ %>
                <script>
                    audio.volume = <%= volume %> /
                    100;
                    volumeBar.value = <%= volume %>;
                </script>
                <% } %>
            </div>
        </div>
        <div id="footer">
            <hr>
            &copy; <%= year %> HoovesSound <br>
            <a href="https://github.com/hoovessound">GitHub</a> <br><br>
            <a id="donate" href="https://www.patreon.com/felixfong227">
                <p class="text">patreon</p>
            </a>
            <br>
            <br>
            <p>Special thank you for the following services and peoples</p>
            <ul>
                <a href="http://www.filezigzag.com">
                    <li>FileZigZag - File Convert Services</li>
                </a>
                <a href="https://poniverse.net">
                    <li>Poniverse - Authentication Solution</li>
                </a>
                <a href="https://ghost3641.deviantart.com">
                    <li>Ghost3641 - Banner Cover Artist</li>
                </a>
                <a href="https://yinglongfujun.deviantart.com">
                    <li>YinglongFujun - Logo Designer</li>
                </a>
            </ul>
            
        </div>
    </div>
    <script src="/static/js/hotkey.js"></script>
    <script src="/static/js/latestTracks.js"></script>
    <script src="/static/js/notification.js"></script>
    <script src="/static/js/localPlayList.js"></script>


    <%if(typeof playTimeValue !== 'undefined'){%>
    <script>
        audio.currentTime = <%=loginUser.lastPlay.playtime.currentTime%>
        masterPlayerTimeStamp.max = <%=loginUser.lastPlay.playtime.duration%>
        masterPlayerTimeStamp.value = <%=loginUser.lastPlay.playtime.currentTime%>
    </script>
    <%}%>
</div>
</body>
</html>